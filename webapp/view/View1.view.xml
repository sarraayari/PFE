<mvc:View controllerName="project2.controller.View1"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:u="sap.ui.unified"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
    xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:dnd-grid="sap.f.dnd"
    xmlns:t="sap.ui.table"
    height="100%">

		<tnt:ToolHeader id="ToolHeader" class="sapUiTinyMargin sapUiLargeMarginTop">
			<Title text="Workshop Fiori" wrapping="false">
			</Title>			
		</tnt:ToolHeader>



<HBox class="sapUiTinyMargin">
<OverflowToolbar id="otb1">
	<Label text="Buttons:"/>
		<ToolbarSpacer/>
		<FlexBox
        alignItems="Center"
        justifyContent="SpaceBetween"
        width="100%">
			<Button
				text="Buttons"
				type="Transparent"
				press="onNavigateTobutton">
				
			
			</Button>
			<Button
				text="Tables"
				type="Transparent"
				press="onNavigateTotable">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				
			</Button>
			<Button
				text="Carousel"
				type="Transparent"
				press="onNavigateTocarousel">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				
			</Button>
			<Button
				text="Message Strip"
				type="Transparent"
				press="onNavigateTomessagestrip">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				
			</Button>

			<Button
				text="Forms"
				type="Transparent"
				press="onNavigateToforms">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				
			
			</Button>

			<Button
				text="Icons"
				type="Transparent"
				press="onNavigateToicons">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				
			
			</Button>


			<Button
				text="Message Box Initial Focus"
				type="Transparent"
				press="onNavigateTomessagebox">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				
			
			</Button>

			<Button
				text="Monitor Tile"
				type="Transparent"
				press="onNavigateToMonitorTile">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				
			
			</Button>
		

			
			<Button
				text="Switch"
				type="Transparent"
				press="onNavigateToswitch">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				
			</Button>
    </FlexBox>
	</OverflowToolbar>
		</HBox>
 
<VBox class="sapUiSmallMargin">
		
<VBox id="container">
                <!-- View 2 will be loaded here -->
</VBox>
        

		
		<HBox>
			<Button
				text="Back"
				type="Back"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</Button>

			<Select id="animationSelect">
				<core:Item text="Slide animation" key="slide" />
				<core:Item text="Base slide animation" key="baseSlide" />
				<core:Item text="Fade animation" key="fade" />
				<core:Item text="Flip animation" key="flip" />
				<core:Item text="Show animation" key="show" />
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</Select>
		</HBox>

	</VBox>			
</mvc:View> 